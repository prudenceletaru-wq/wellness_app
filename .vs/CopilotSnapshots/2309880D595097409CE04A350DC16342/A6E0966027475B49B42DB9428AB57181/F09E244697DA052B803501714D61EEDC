class BaseManager:
    """
    Base class for all managers in the Wellness Tracker application.

    This class provides a shared structure and reusable helper methods
    that can be extended by other manager classes.
    """

    def __init__(self):
        """
        Initialize the BaseManager.

        This constructor can be extended by subclasses to include
        additional initialization logic.
        """
        pass

    def log(self, message: str):
        """
        Log a message to the console for debugging or informational purposes.

        Args:
            message (str): The message to log.
        """
        print(f"[{self.__class__.__name__}] {message}")
